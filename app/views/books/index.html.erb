<h1>User info</h1>
<h2>name</h2>
<p><%= @user.name %></p>
<h2>introduction</h2>
<p><%= @user.introduction %></p>


<h1>New book</h1><!--このページをログイン後の遷移先にする-->
  <%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>
<p>Opinion</p>
<span><%= book.body %></span>
<% end %>