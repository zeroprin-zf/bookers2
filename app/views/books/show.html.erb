<%= render 'template/user', user: @user %>
<%= render 'template/book', book: @book_new %>

<h1>Book detail</h1>
<body>
  <table>
    <tbody>
      <td><%= image_tag @user.get_profile_image %><br>
           <%= link_to @user.name, user_path(@user.id) %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
    </tbody>
  </table>
</body>
<p></p><!--名前をusershowへのリンクに-->
<p></p>

<!--edit,destroyのリンク-->
<% if @book.user == current_user %>
  <%= link_to "edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
