<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'template/user', user: @user %>
      <%= render 'template/book', book: @book_new %>
    </div>

    <div class="offset-md-1 col-md-8">
      <h1>Book detail</h1>
      <body>
        <table class="table table-hover">
          <tbody>
            <td scope="col"><%= image_tag @user.get_profile_image %><br>
                 <%= link_to @user.name, user_path(@user.id) %></td>
            <td scope="col"><%= link_to @book.title, book_path(@book.id) %></td>
            <td scope="col"><%= @book.body %></td>
            <td id="favorite_btn_<%= @book.id %>">
              <%= render "favorites/btn", book: @book %>
            </td>
            <td id="comment_counter">
              <%= render "book_comments/counter", book: @book %>
            </td>

            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id),class: "btn btn-danger" ,method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            <% end %>
          </tbody>
        </table>

        <div id="comment_index">
          <%= render "book_comments/index", book: @book %>
        </div>
        <%= render "book_comments/form", book: @book, book_comment: @book_comment %>
      </body>

<!--edit,destroyのリンク-->

