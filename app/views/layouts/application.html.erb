<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2 </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width,initial-scale=1">

    <script src="https://kit.fontawesome.com/04f10c2a51.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <h2>
          <%= link_to "Bookers" ,root_path %>
        </h2>
        <li>
          <%= link_to "Home" , user_path(current_user) %><!--こんなんありなんだ-->
        </li>
        <li>
          <%= link_to "Users" , users_path %><!--user.indexに遷移-->
        </li>
        <li>
          <%= link_to "Books" , books_path %><!--books.indexに遷移-->
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <h2>
          <%= link_to "Bookers" ,root_path %>
        </h2>
        <li>
          <%= link_to "Home" ,root_path %>
        </li>
        <li>
          <%= link_to "About" ,about_path %>
        </li>
        <li>
          <%= link_to "Sign up", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Log in", new_user_session_path %>
        </li>
      <% end %>
    </header>
    <main>
      <div>
        <%= flash[:notice] %>
      </div>
       <%= yield %>
    </main>
    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>

