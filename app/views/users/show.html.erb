<%= render 'books/list', user: @user , book: @book %>

<h1>Books</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <% @user.books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td><!--タイトルを押したらbooksのshowページへ-->
        <td><%= book.body %></td>
        <td><%= link_to book.body, book_path(book.id) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</body>