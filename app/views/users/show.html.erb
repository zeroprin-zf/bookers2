<%= render 'template/book', book: @book %>
<%= render 'template/user', user: @user %>

<h1>Books</h1>

<body>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <% @user.books.each do |book| %>
    <tbody>
      <tr>
        <td><%= link_to book.title, book_path(book.id) %></td><!--タイトルを押したらbooksのshowページへ-->
        <td><%= book.body %></td>
        <!--td><!--%= link_to book.body, book_path(book.id) %></td-->
      </tr>
    </tbody>
    <% end %>
  </table>
</body>