<div class="container">
  <div class="row">
    <div class= "col-md-3">
      <%= render 'template/user', user: @user_s %>
      <%= render 'template/book', book: @book %>
    </div>

      <div class="offset-md-1 col-md-8">
        <h1>Users</h1>
        <body>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">image</th>
                <th scope="col">name</th>
              </tr>
            </thead>

            <% @user.each do |user| %><!--ここにuserの一覧が-->
            <tbody>
              <tr>
                <td scope="col"><%= image_tag user.get_profile_image %></td>
                <td scope="col"><%= user.name %></td>
                <td colspan="2"><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        </body>
    </div>
  </div>
</div>